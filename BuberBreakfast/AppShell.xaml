<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BuberBreakfast.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BuberBreakfast"
    FlyoutBehavior="Disabled" FlyoutBackgroundColor="Wheat"
     BackgroundColor="White"
       ForegroundColor="White"
       TitleColor="White"
       DisabledColor="#B4FFFFFF"
       UnselectedColor="#95FFFFFF">

    <!--NavBarIsVisible="False" FlyoutBackgroundColor="Wheat"
     BackgroundColor="#455A64"
       ForegroundColor="White"
       TitleColor="White"
       DisabledColor="#B4FFFFFF"
       UnselectedColor="#95FFFFFF"-->
    <Shell.TitleView>
        <HorizontalStackLayout Padding="0,10,10,0">
            <Label FontFamily="RobotoBold" FontSize="30" Text="Buber "/>
            <Label FontFamily="RobotoBold" FontSize="30" Text="Breakfasts" TextColor="{StaticResource BuberBlue}"/>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <ShellContent
        Title="Home"
        IsVisible="True"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
